{
	"name": "wp-media/package-template",
	"description": "Repository template for our packages",
	"homepage": "https://github.com/Hercilio1/wp-media-crawler",
	"license": "GPL-2.0+",
	"authors": [
		{
			"name": "Hercilio M. Ortiz",
			"email": "herciliomartins@gmail.com",
			"homepage": "https://github.com/Hercilio1"
		}
	],
	"type": "wordpress-plugin",
	"config": {
		"sort-packages": true,
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	},
	"support": {
		"issues": "https://github.com/Hercilio1/wp-media-crawler/issues",
		"source": "https://github.com/Hercilio1/wp-media-crawler"
	},
	"require-dev": {
		"php": "^5.6 || ^7",
		"brain/monkey": "^2.0",
		"dealerdirect/phpcodesniffer-composer-installer": "^1.0",
		"phpcompatibility/phpcompatibility-wp": "^2.0",
		"phpunit/phpunit": "^5.7 || ^7",
		"wp-coding-standards/wpcs": "^2",
		"wp-media/phpunit": "^3"
	},
	"autoload": {
        "psr-4": {
            "WP_Media\\Crawler\\": "src/"
        }
    },
	"autoload-dev": {},
	"scripts": {
		"test-unit": "\"vendor/bin/wpmedia-phpunit\" unit path=Tests/Unit",
		"test-integration": "\"vendor/bin/wpmedia-phpunit\" integration path=Tests/Integration/",
		"run-tests": [
			"@test-unit",
			"@test-integration"
		],
		"install-codestandards": "Dealerdirect\\Composer\\Plugin\\Installers\\PHPCodeSniffer\\Plugin::run",
		"phpcs": "phpcs --basepath=.",
		"phpcs-changed": "./bin/phpcs-changed.sh",
		"phpcs:fix": "phpcbf",
		"build": [
			"composer install --no-dev",
			"wp dist-archive .",
			"composer install"
		]
	}
}
